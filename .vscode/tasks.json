{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "glad.c",
                "${file}",
                "-fdiagnostics-color=always",
                "-lglfw3",
                "-lGL",
                "-lX11",
                "-lpthread",
                "-lXrandr",
                "-lXi",
                "-ldl",
                "-Ilibs/",
                "-Iglfw3",
                "-o",
                "${workspaceFolder}/bin/${fileBasenameNoExtension}",
            ],
            "options": {
                "cwd": "${fileDirname}",
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}